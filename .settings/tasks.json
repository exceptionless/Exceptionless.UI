{
	"version": "0.1.0",
	"command": "grunt",
	"isShellCommand": true,
    "options": {
        "cwd": "${cwd}/src"
    },
	"tasks": [
        {
            "taskName": "build",
            "args": [],
            "isBuildCommand": true,
            "isWatching": false,
            "problemMatcher": [
                "$lessCompile",
                "$jshint"
            ]
        },
        {
            "taskName": "serve",
            "args": [ "serve" ],
            "isWatching": true
        },
        {
            "taskName": "test",
            "args": [ "test" ],
            "isTestCommand": true
        }
    ]
}